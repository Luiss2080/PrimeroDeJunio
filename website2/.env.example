# Environment Variables Template for Nexorium Website
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=Nexorium
VITE_APP_VERSION=1.0.0

# Frontend Configuration
VITE_PORT=3000
VITE_HOST=localhost

# Analytics (Replace with your actual IDs)
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Payment Gateway (Replace with your actual keys)
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Social Media URLs
VITE_FACEBOOK_URL=https://facebook.com/your_page
VITE_TWITTER_URL=https://twitter.com/your_account
VITE_LINKEDIN_URL=https://linkedin.com/company/your_company
VITE_INSTAGRAM_URL=https://instagram.com/your_account

# Contact Information
VITE_CONTACT_EMAIL=info@yourdomain.com
VITE_CONTACT_PHONE=+1-555-000-0000
VITE_SUPPORT_EMAIL=support@yourdomain.com

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=false

# Debug
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info